#include <iostream>
#include <array>
using namespace std;

int main()
{
	setlocale(0, "");
	int x;
	cout << "[+]Введите размер: " << endl;
	cin >> x;
	char texture = '#';
	for (int i = 1; i <= x; i++) {
		for (int j = 1; j <= x; j++) {
			if (i == x / 2 and j % 2 != 0) {
				cout << texture << " ";
			}
			else if (i == x / 2 + 1 and j % 2 == 0) {
				cout << texture << " ";
			}
			else {
				cout << ". ";
			}

		}
			cout << endl;
	}
}
