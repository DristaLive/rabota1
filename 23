#include <iostream>
#include <array>
using namespace std;

int main()
{
	setlocale(0, "");
	int numbers[5]{};
	for (int i = 0; i < 5; i++) {
		cout << "Введите " << i+1 << " элемент" << endl;
		cin >> numbers[i];
	}
	for (int i = 0; i < 5; i++) {
		cout << "| Таблица: " << i+1 << endl;
		cout << "-------------------------------------------------------------" << endl;
		cout << "|   Число   |         Пример         |       Результат      |" << endl;
		cout << "-------------------------------------------------------------" << endl;
		cout << "|     " << numbers[i] << "     |         " <<numbers[i]<<" + "<<numbers[i]<< "          |           " <<numbers[i] + numbers[i] <<"          |" << endl;
		cout << "-------------------------------------------------------------" << endl;
		cout << "|     " << numbers[i] << "     |         " << numbers[i] << " - " << numbers[i] << "          |           " << numbers[i] - numbers[i] << "          |" << endl;
		cout << "-------------------------------------------------------------" << endl;
		cout << "|     " << numbers[i] << "     |         " << numbers[i] << " / " << numbers[i] << "          |           " << numbers[i] / numbers[i] << "          |" << endl;
		cout << "-------------------------------------------------------------" << endl;
		cout << "|     " << numbers[i] << "     |         " << numbers[i] << " * " << numbers[i] << "          |           " << numbers[i] * numbers[i] << "          |" << endl;
		cout << "-------------------------------------------------------------" << endl;
	}
}
